@model ECommercePlatform.Models.Engineer

<h2>新增工程師帳號</h2>

<form method="post">
    <div class="form-group">
        <label>帳號</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>密碼</label>
        <input asp-for="PasswordHash" class="form-control" type="password" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">儲存</button>
    <a class="btn btn-secondary mt-2" href="/admin/engineers">取消</a>
</form>
