@model ECommercePlatform.Models.FixPassword

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">密碼修改</h2>
            </div>
            <div class="card-body">
                @if (ViewBag.Message == "密碼更新成功")
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }
                else if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }

                <form method="post" asp-controller="Member" asp-action="Password">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="form-label">舊密碼：</label>
                        <input type="password" name="OldPassword" class="form-control" placeholder="請輸入舊密碼"/>
                        <span style="color: #C83C23;">@Html.ValidationMessageFor(model => model.OldPassword)</span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">新密碼：</label>
                        <input type="password" name="NewPassword" class="form-control" placeholder="請輸入新密碼"/>
                        <span style="color: #C83C23;">@Html.ValidationMessageFor(model => model.NewPassword)</span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">密碼確認：</label>
                        <input type="password" name="CheckPassword" class="form-control" placeholder="請輸入再次輸入新密碼"/>
                        <span style="color: #C83C23;">@Html.ValidationMessageFor(model => model.CheckPassword)</span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">更新密碼</button>
                </form>
            </div>
        </div>
    </div>
</div>