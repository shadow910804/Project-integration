@model ECommercePlatform.Models.Order

<h2>訂單詳情 - #@Model.Id</h2>

<p><strong>狀態：</strong> @Model.OrderStatus</p>
<p><strong>付款方式：</strong> @Model.PaymentMethod</p>
<p><strong>地址：</strong> @Model.ShippingAddress</p>
<p><strong>訂購時間：</strong> @Model.OrderDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

<h4>訂單項目</h4>
<table class="table">
    <thead>
        <tr>
            <th>商品</th>
            <th>單價</th>
            <th>數量</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.UnitPrice.ToString("C")</td>
            <td>@item.Quantity</td>
        </tr>
    }
    </tbody>
</table>

<a href="/Member/Orders" class="btn btn-secondary">返回</a>
