@model IEnumerable<ECommercePlatform.Models.Review>

<h2>我的評價</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>時間</th>
            <th>商品</th>
            <th>星等</th>
            <th>內容</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            <td>@r.Product.Name</td>
            <td>@r.Rating</td>
            <td>@r.Content</td>
            <td>
                <a href="/Member/Reviews/Delete/@r.Id" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除這筆評價嗎？')">刪除</a>
            </td>
        </tr>
    }
    </tbody>
</table>
