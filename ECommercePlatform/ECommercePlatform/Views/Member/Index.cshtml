@model ECommercePlatform.Models.User

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">會員 @Model.Username 的個人資訊</h2>
            </div>
                <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">電子信箱：</label>
                    <div>@Model.Email</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">姓名：</label>
                    <div>@(Model.FirstName + " " + Model.LastName)</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">電話：</label>
                    <div>@Model.PhoneNumber</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">地址：</label>
                    <div>@Model.Address</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">註冊時間：</label>
                    <div>@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                </div>
            </div>
        </div>
        <a asp-controller="Member" asp-action="Profile" class="btn btn-outline-primary">
            <i class="fas"></i> 變更資料
        </a>
        <a asp-controller="Member" asp-action="Password" class="btn btn-outline-primary">
            <i class="fas"></i> 變更密碼
        </a>
    </div>
</div>
