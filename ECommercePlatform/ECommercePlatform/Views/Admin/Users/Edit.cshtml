@model ECommercePlatform.Models.User

<h2>編輯會員</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>姓名</label>
        <input class="form-control" asp-for="Username" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label">啟用</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">更新</button>
    <a class="btn btn-secondary mt-2" href="/admin/users">取消</a>
</form>
